<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style3.css">
    <title>Snake Game</title>
</head>
<body>
    <div class="userContainer">
        <div class="loginTitle">
            <h4> Snake Game</h4>
            <span>Register</span>
        </div>

        <!-- form para insertar la informacion de nuestro usuario a la base de datos -->
        <form action="/register" method="POST" class="userForm">
            <input type="text" name="user" id="user" placeholder="Username" required>
            <input type="password" name="password" id="password" placeholder="Password" required>
            <button  type="submit" class="userInput"> Enter </button>
        </form>

        <!-- boton para volver al login -->
        <div>
            <a href="/login"><input type="button" class="userInput" value="Cancel"></a>
        </div>
    </div>

    <!-- sweet alert 2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != 'undefined') { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButtom: '<%= showConfirmButtom %>',
                timer: '<%= timer %>'
            }).then(() => {
            window.location = '/login'
        })
        </script>
    <% } %>

</body>
</html>