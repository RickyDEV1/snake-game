<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <title> Snake Game </title>
</head>
<body>
    <div class="container noselect">
        <h1> Snake Game </h1>

        <!-- boton para cerrar sesion -->
        <div class="data">
            <a href="login"><input type="button" class="logout" value="Logout"></a>
        </div>

        <!-- boton para recargar la pagina para asi reiniciar el juego -->
        <div class="wrapper">
            <button onClick="window.location.reload();" id="restart">
                Restart
            </button>

            <!-- canvas -->
            <canvas id="canvas" width="400" height="400"></canvas>

            <!-- puntuaje y leaderboard -->
            <div id="ui">
                <h2> Score </h2>
                <span id="score"> 00 </span>
                <form action="#">
                    <button id="leaderboard">Leaderboard</button>
                </form>
            </div>
            
            <div class="instructions">
                <h1> Use your arrows to move </h1>
            </div>
        </div>
    </div>
<script src="resources/css/script.js"></script>
</body>
</html>